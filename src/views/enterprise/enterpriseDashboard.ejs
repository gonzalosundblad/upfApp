<%- include("./../partials/head") %>
<body>
<%- include("./../partials/navbar")%>
  <main>
  <% if (enterpriseLogged.registered) { %>
        <!-- Success Alert -->
        <div class="alert alert-success alert-dismissible fade show">
          <strong>Account properly registered.</strong>You are all set to start minting UPF!
        </div>
        <div class="card-body py-5 px-md-5">
          <div class="row d-flex justify-content-center">
            <div class="col-lg-8">
              <form action="/enterprise/newMintingRequest" method="POST">
                <div class="form-outline mb-4">
                  <% if (errorMessages && errorMessages.length > 0) { %>
                    <div class="alert alert-danger">
                      <p><%= errorMessages[0].name.msg %></p>
                    </div>
                  <% } %>
                  <input name="name" type="text" class="form-control" />
                  <label class="form-label" for="sku">New minting request name</label>
                </div>
                <input type="submit" class="btn btn-outline-dark flex-shrink-0" value="Start you minting request aplication"></input>
              </form>
            </div>
          </div>
        </div>
      <% } else if(!submitedDetails){ %>
        <!-- Error Alert -->
        <div class="alert alert-danger alert-dismissible fade show">
          <strong>Account details missing.</strong> Please complete you enterprise information <a href="/enterprise/details">here</a>
        </div>
      <% } else { %>
        <!-- Info Alert -->
        <div class="alert alert-info alert-dismissible fade show">
          <strong>Account details submited!</strong> Please wait untill unplastify process your data
        </div>
    <% } %>
  <!-- Related items section-->
  <% if(openMintingRequests.length>0) { %>
    <%-  include("./requests") %>
  <% } %>
<!-- Product section-->
  <section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
      <div class="row gx-4 gx-lg-5 align-items-center">
        <div class="col-md-6">
        <img class="card-img-top mb-5 mb-md-0" src="https://dummyimage.com/600x700/dee2e6/6c757d.jpg" alt="..." />
      </div>
        <div class="col-md-6">
          <div class="small mb-1">SKU: BST-498</div>
          <h1 class="display-5 fw-bolder">Shop item template</h1>
          <div class="fs-5 mb-5">
            <span class="text-decoration-line-through">$45.00</span>
            <span>$40.00</span>
          </div>
          <p class="lead">Lorem ipsum dolor sit amet consectetur adipisicing elit. Praesentium at dolorem quidem modi. Nam sequi consequatur obcaecati excepturi alias magni, accusamus eius blanditiis delectus ipsam minima ea iste laborum vero?</p>
          <div class="d-flex">
            <input class="form-control text-center me-3" id="inputQuantity" type="num" value="1" style="max-width: 3rem" />
            <button class="btn btn-outline-dark flex-shrink-0" type="button">
              <i class="bi-cart-fill me-1"></i>
              Add to cart
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  </main>

  <%-include("./../partials/footer")%>
</body>
</html>
