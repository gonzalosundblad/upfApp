<!-- Section: Design Block -->
<section class="text-center">
  <!-- Background image -->
  <div class="p-5 bg-image" style="
    background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');
    height: 300px;
    ">
  </div>
  <!-- Background image -->

  <div class="card mx-4 mx-md-5 shadow-5-strong" style="
    margin-top: -100px;
    background: hsla(0, 0%, 100%, 0.8);
    backdrop-filter: blur(30px);
  ">
    <div class="card-body py-5 px-md-5">
      <div class="row d-flex justify-content-center">
        <div class="col-lg-8">
          <h2 class="fw-bold mb-5">Submit your Company's details</h2>
          <form method="POST" action="/enterprise/details">
            <!-- CUIT inpmut -->
              <div class="form-outline mb-4">
                <input name ="cuit" type="number" id="form3Example1" class="form-control" />
                <label class="form-label" for="form3Example1">CUIT</label>
              </div>

            <!-- Country inpmut -->
              <div class="form-outline mb-4">
                <input name ="country" type="text" id="form3Example1" class="form-control" />
                <label class="form-label" for="form3Example1">Country</label>
              </div>

            <!-- City inpmut -->
              <div class="form-outline mb-4">
                <input name ="city" type="text" id="form3Example1" class="form-control" />
                <label class="form-label" for="form3Example1">City</label>
              </div>
            
              <!-- Employees input -->
              <div class="form-outline mb-4"> 
                <input name ="employees" type="number" id="form3Example3" class="form-control" />
                <label class="form-label" for="form3Example3">Number of Employees</label>
              </div>

            <!-- Invoicing input -->
              <div class="form-outline mb-4">
                <input type="number" name ="invoicing" id="form3Example1" class="form-control" />
                <label class="form-label" for="form3Example1">Anual Invoicing</label>
              </div>

            <!-- Mipyme input -->
              <div class="form-outline mb-4">
                <input type="text" name ="mipyme" id="form3Example1" class="form-control" />
                <label class="form-label" for="form3Example1">Mipyme category</label>
              </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">
              Submit
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
